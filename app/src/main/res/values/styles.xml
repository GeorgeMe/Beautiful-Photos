<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
		<item name="android:actionBarStyle">@style/Theme.EagleNinjaLight.ActionbarStyle</item>
		<item name="android:icon">@drawable/ic_launcher</item>
		<item name="android:typeface">serif</item>
		<item name="icon">@drawable/ic_launcher</item>
	</style>

	<style name="Theme.EagleNinjaLight.ActionbarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@color/actionbar_background</item>
		<item name="android:titleTextStyle">@style/Theme.EagleNinjaLight.TitleTextStyleLight</item>

	</style>

	<style name="Theme.EagleNinjaLight.TitleTextStyleLight" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/actionbar_title_text_color_light</item>
	</style>

	<style name="PhotoCaption">
		<item name="android:textColor">@color/amber_500</item>
		<item name="android:textSize">20dp</item>
	</style>

	<style name="PhotoCaption.Italic" parent="@style/PhotoCaption">
		<item name="android:textStyle">italic</item>
	</style>

</resources>